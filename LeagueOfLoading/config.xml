<?xml version="1.0" encoding="utf-8"?>
<widget xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:vs="http://schemas.microsoft.com/appx/2014/htmlapps" id="gg.leagueofloading" version="1.0.0" defaultlocale="en-US" xmlns="http://www.w3.org/ns/widgets">
  <name>League Of Loading</name>
  <description>A Loading screen experience for people waiting to play League of Legends</description>
  <author href="http://cordova.io" email="dev@cordova.apache.org">Mortoc</author>
  <content src="index.html" />
  <access origin="*" />
  <preference name="SplashScreen" value="screen" />
  <preference name="windows-target-version" value="8.1" />
  <preference name="windows-phone-target-version" value="8.1" />
  <vs:platformSpecificValues />
  <preference name="Fullscreen" value="False" />
  <preference name="KeepRunning" value="False" />
  <preference name="ShowTitle" value="True" />
</widget>